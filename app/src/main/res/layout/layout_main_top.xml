<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="203dp">
    <ImageView
        android:id="@+id/top_record_iv"
        android:layout_width="330dp"
        android:layout_height="147dp"
        android:src="@mipmap/bg_record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/top_icon"
        android:layout_width="wrap_content"
        android:layout_height="161dp"
        android:src="@mipmap/icon_record"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/top_record_iv"
        app:layout_constraintEnd_toEndOf="@id/top_record_iv" />

    <TextView
        android:id="@+id/top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toStartOf="@id/top_record_iv"
        app:layout_constraintTop_toTopOf="@id/top_record_iv" />

    <TextView
        android:id="@+id/top_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="@id/top_record_iv"
        app:layout_constraintTop_toBottomOf="@id/top_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/top_button"
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/main_color"
        android:text="@string/blood_pressure_record_button"
        android:background="@drawable/bg_btn_record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/top_record_iv"
        app:layout_constraintTop_toBottomOf="@id/top_content" />
</androidx.constraintlayout.widget.ConstraintLayout>