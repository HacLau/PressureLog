<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_item"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <ImageView
        android:id="@+id/setting_item_bg"
        android:layout_width="330dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setting_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/color_24"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@id/setting_item_bg"
        app:layout_constraintStart_toStartOf="@id/setting_item_bg"
        app:layout_constraintTop_toTopOf="@id/setting_item_bg" />

    <ImageView
        android:id="@+id/setting_item_next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:src="@mipmap/ic_setting_item_next"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/setting_item_bg"
        app:layout_constraintEnd_toEndOf="@id/setting_item_bg"
        app:layout_constraintTop_toTopOf="@id/setting_item_bg" />

    <TextView
        android:id="@+id/setting_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:textColor="@color/color_83"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/setting_item_bg"
        app:layout_constraintEnd_toEndOf="@id/setting_item_bg"
        app:layout_constraintTop_toTopOf="@id/setting_item_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>